<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.projex.javafx_chat.client.SignUpController"
      spacing="15" alignment="CENTER"
      style="-fx-background-color: #f0f2f5; -fx-padding: 20;">

    <VBox spacing="15" alignment="CENTER"
          style="-fx-background-color: white; -fx-padding: 30; -fx-background-radius: 10; -fx-min-width: 350;">

        <Label text="Create New Account"
               style="-fx-font-size: 24; -fx-font-weight: bold; -fx-text-fill: #1a73e8;"/>

        <TextField fx:id="tfnewUsername" promptText="New Username"
                   style="-fx-pref-width: 250; -fx-padding: 10; -fx-background-radius: 5;"/>

        <PasswordField fx:id="pfnewPassword" promptText="New Password"
                       style="-fx-pref-width: 250; -fx-padding: 10; -fx-background-radius: 5;"/>

        <HBox spacing="15" alignment="CENTER">
            <Button text="Register" onAction="#handleSignUp"
                    style="-fx-background-color: #34a853; -fx-text-fill: white; -fx-padding: 10 20; -fx-background-radius: 5;"/>
            <Button text="Back to Login" onAction="#showLoginForm"
                    style="-fx-background-color: #1a73e8; -fx-text-fill: white; -fx-padding: 10 20; -fx-background-radius: 5;"/>
        </HBox>
    </VBox>
</VBox>

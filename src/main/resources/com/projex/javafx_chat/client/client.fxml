<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<VBox xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml" fx:controller="com.projex.javafx_chat.client.Controller">
    <children>
        <TextField fx:id="tf_username" promptText="Username" />
        <PasswordField fx:id="pf_password" promptText="Password" />
        <Button text="Login" fx:id="button_login" onAction="#handleLogin" />
        <Button text="Sign Up" onAction="#showSignUpForm" />
        <ScrollPane fx:id="sp_main">
            <content>
                <VBox fx:id="vbox_message" />
            </content>
        </ScrollPane>
        <TextField fx:id="tf_message" promptText="Type a message" />
        <Button text="Send" fx:id="button_send" onAction="#handleSendMessage" />
    </children>
</VBox>


<AnchorPane fx:id="ap_main" prefHeight="500.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.projex.javafx_chat.server.Controller">
<children>
    <!-- Title Label -->
    <Label layoutX="210" layoutY="10" text="Server Dashboard">
        <font>
            <Font name="Arial Rounded MT Bold" size="23"></Font>
        </font>
    </Label>

    <!-- Server Logs -->
    <ScrollPane fx:id="sp_serverLogs" fitToWidth="true" layoutX="20.0" layoutY="50.0" prefHeight="300.0" prefWidth="560.0">
        <content>
            <TextArea fx:id="ta_serverLogs" editable="false" wrapText="true" />
        </content>
    </ScrollPane>

    <!-- Connected Users Dropdown -->
    <ComboBox fx:id="cb_users" layoutX="20.0" layoutY="370.0" prefWidth="300.0" promptText="Select User" />

    <!-- Retrieve Chat Button -->
    <Button fx:id="button_retrieveChat" layoutX="340.0" layoutY="370.0" text="Retrieve Chat" />

    <!-- Logs Label -->
    <Label layoutX="20.0" layoutY="30.0" text="Server Logs:" />
</children>
</AnchorPane>




